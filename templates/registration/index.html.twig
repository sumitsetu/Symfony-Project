{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block body %}
    {% form_theme form 'form/form_errors.html.twig' %}
        {% include 'section/top.html' %}
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                {{ form_start(form, {'attr':{'class': 'mx-1 mx-md-4'}}) }}

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_label(form._user, 'Name' ,{'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form._user, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form._user) }}
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_label(form.email, 'Your Email' ,{'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_label(form.password.password, '' ,{'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.password.password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password.password) }}
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_label(form.password.confirm_password, 'Confirm password' ,{'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.password.confirm_password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password.confirm_password) }}
                        </div>
                    </div>
                    <div> {{ form_errors(form.agreement) }}</div>
                    <div class="form-check d-flex justify-content-center mb-5">
                            {{ form_widget(form.agreement, {'attr': {'class': 'form-check-input me-2'}}) }}
                            {{ form_label(form.agreement, 'I agree all statements in <a href="#!">Terms of service</a>' ,{'label_attr': {'class': 'form-check-label', 'id': 'agreement'}}) }}
                        
                    </div>
                    

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        {{ form_widget(form.register, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                    </div>
                {{ form_end(form) }}
                <!-- Login Link -->
                <div class="text-center">
                    <p>Already Registered <a href="{{ path('app_login') }}">Login</a></p>
                </div>
            </div>
            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">
            </div>
        {% include 'section/bottom.html' %}
{% endblock %}
